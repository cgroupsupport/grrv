<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="2pt"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cgroup.androidcontrolinterface.InterfaceSelectionActivity"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="50pt"
        android:layout_height="40pt"
        android:src="@drawable/logo_cgroup"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/imageView4" />

    <Button
        android:gravity="center"
        android:layout_width="100pt"
        android:layout_height="40pt"
        android:background="@drawable/standard"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:onClick="connectStandard"
        android:id="@+id/button2"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/imageView4" />

    <Button
        android:gravity="center"
        android:layout_width="100pt"
        android:layout_height="40pt"
        android:background="@drawable/myo"
        android:onClick="connectMyo"
        android:layout_alignTop="@+id/button2"
        android:layout_alignEnd="@+id/cancel_button" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="20pt"
        android:layout_height="20pt"
        android:background="@drawable/xbutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="quit"
        android:layout_margin="8pt"/>

    <ImageView
        android:layout_width="200pt"
        android:layout_height="80pt"
        android:gravity="left"
        android:src="@drawable/interface_selection"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

</RelativeLayout>
