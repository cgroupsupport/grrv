<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="2pt"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cgroup.androidcontrolinterface.MyoControlActivity"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="50pt"
        android:layout_height="40pt"
        android:src="@drawable/logo_cgroup"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/imageView4" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="20pt"
        android:layout_height="20pt"
        android:background="@drawable/xbutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="quit"
        android:layout_margin="8pt"/>

    <Button
        android:gravity="center"
        android:layout_width="100pt"
        android:layout_height="40pt"
        android:background="@drawable/standard"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:onClick="connectStandard"
        android:id="@+id/button2"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="200pt"
        android:layout_height="80pt"
        android:gravity="end"
        android:src="@drawable/myo_control"
        android:padding="15pt"
        android:id="@+id/imageView"
        android:layout_below="@+id/cancel_button"
        android:layout_toStartOf="@+id/cancel_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="receiveData"
        android:id="@+id/textReceiveData"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="10pt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Response:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textReceiveData"
        android:textColor="#000000"
        android:textSize="10pt"/>

</RelativeLayout>
